/* Thème clair : design épuré avec des couleurs douces */
.light-theme {
    background-color: #EAD8B1; /* Arrière-plan beige clair */
    color: #333333; /* Texte gris foncé */
    font-family: Arial, sans-serif; /* Police simple et lisible */
}

.light-theme .box {
    background-color: #f9f9f9; /* Arrière-plan blanc cassé pour les boîtes */
    border: 1px solid #ddd; /* Bordure grise autour des boîtes */
    color: #333; /* Texte gris foncé dans les boîtes */
}

.light-theme .box-title {
    background-color: #f9f9f9; /* Arrière-plan similaire à la boîte */
    color: #333; /* Texte gris foncé */
    padding: 10px; /* Espacement autour du titre */
    font-size: 18px; /* Taille du texte du titre */
}

.light-theme .box-body {
    color: #555; /* Texte légèrement plus clair dans le corps des boîtes */
    font-size: 14px; /* Taille standard du texte */
}

.light-theme table {
    background-color: #fff; /* Tables en fond blanc */
    color: #333; /* Texte gris foncé */
    border-collapse: collapse; /* Supprime les espaces entre les bordures */
}

.light-theme table, th, td {
    border: 1px solid #ddd; /* Bordures grises autour des tables et cellules */
    padding: 8px; /* Espacement interne des cellules */
}

.light-theme h1, h2, h3, h4 {
    color: #333333; /* Couleur uniforme pour les titres */
}

/* Thème sombre : arrière-plan foncé avec texte clair pour un contraste élevé */
.dark-theme {
    background-color: #333333; /* Arrière-plan sombre */
    color: #ffffff; /* Texte blanc pour un bon contraste */
    font-family: Arial, sans-serif; /* Police simple et moderne */
}

.dark-theme .box {
    background-color: #444; /* Arrière-plan des boîtes plus clair que le fond */
    border: 1px solid #555; /* Bordure légèrement plus claire */
    color: #fff; /* Texte blanc dans les boîtes */
}

.dark-theme .box-title {
    background-color: #28a745; /* Vert vif pour les titres des boîtes */
    color: white; /* Texte blanc */
    padding: 10px; /* Espacement interne */
    font-size: 18px; /* Taille standard des titres */
}

.dark-theme .box-body {
    color: #ddd; /* Texte légèrement atténué */
    font-size: 14px; /* Taille du texte dans le corps */
}

.dark-theme table {
    background-color: #555; /* Fond plus foncé pour les tables */
    color: #fff; /* Texte blanc */
    border-collapse: collapse; /* Suppression des espaces entre bordures */
}

.dark-theme table, th, td {
    border: 1px solid #777; /* Bordure plus claire autour des cellules */
    padding: 8px; /* Espacement dans les cellules */
}

.dark-theme h1, h2, h3, h4 {
    color: #28a745; /* Vert vif pour les titres */
}

