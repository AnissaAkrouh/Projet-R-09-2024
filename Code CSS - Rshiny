/* Thème professionnel */
.professional-theme {
    background-color: #f0f0f0; /* Arrière-plan gris clair, sobre et épuré */
    color: #444444; /* Couleur du texte principale : gris foncé */
    font-family: 'Times New Roman', Times, serif; /* Police classique pour un look professionnel */
}

.professional-theme .box {
    background-color: #ffffff; /* Couleur de fond des boîtes : blanc pour un aspect propre */
    border: 1px solid #cccccc; /* Bordure grise discrète autour des boîtes */
    color: #444444; /* Couleur du texte à l'intérieur des boîtes : gris foncé */
}

.professional-theme .box-title {
    background-color: #2c3e50; /* Couleur de fond des titres des boîtes : bleu marine */
    color: white; /* Couleur du texte des titres : blanc */
    padding: 10px; /* Espacement interne autour du texte du titre */
    font-size: 18px; /* Taille de la police des titres */
}

.professional-theme .box-body {
    color: #666666; /* Couleur du texte à l'intérieur des boîtes : gris moyen */
    font-size: 14px; /* Taille du texte dans les boîtes */
}

.professional-theme table {
    background-color: #ffffff; /* Couleur de fond des tables : blanc */
    color: #444444; /* Couleur du texte dans les tables : gris foncé */
    border-collapse: collapse; /* Retrait des espaces entre les bordures des cellules */
}

.professional-theme table, th, td {
    border: 1px solid #cccccc; /* Bordure grise claire autour des tables */
    padding: 8px; /* Espacement interne dans les cellules */
}

.professional-theme h1, h2, h3, h4 {
    color: #2c3e50; /* Couleur des titres (h1, h2, etc.) : bleu marine */
}
/* Thème coloré */
.colorful-theme {
