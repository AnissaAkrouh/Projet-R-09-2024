/* Thème clair */
.light-theme {
    background-color: #EAD8B1;
    color: #333333;
    font-family: Arial, sans-serif;
}

.light-theme .box {
    background-color: #f9f9f9;
    border: 1px solid #ddd; /* Bordure grise autour des boîtes */
    color: #333;
}

.light-theme .box-title {
    background-color: #f9f9f9;
    color: #333;
    padding: 10px;
    font-size: 18px;
}

.light-theme .box-body {
    color: #555;
    font-size: 14px;
}

.light-theme table {
    background-color: #fff;
    color: #333;
    border-collapse: collapse;
}

.light-theme table, th, td {
    border: 1px solid #ddd; /* Bordures grises autour des tables et des cellules */
    padding: 8px;
}

.light-theme h1, h2, h3, h4 {
    color: #333333;
}

